void InitSensors()
{
    SetSensorTouch(IN_1);
    SetSensorTouch(IN_2);
    SetSensorColorFull(IN_3);
}

void InitPaper()
{
 		 OnRev(OUT_B,40);
     until(Sensor(IN_1)==1);
     Off(OUT_B);
     RotateMotor(OUT_B,100,450);
     //until(Sensor(IN_2)==1);
     OnFwd(OUT_A,40);
     until(Sensor(IN_3)==3); //GREEN
     Off(OUT_A);
     RotateMotor(OUT_A,40,6);
     RotateMotor(OUT_B,100,-450);
     
     ReadSensorColorEx(IN_3,a,raw,c,c);
     rBottom=raw[0];
     gBottom=raw[1];
     bBottom=raw[2];
     RotateMotor(OUT_B,100,240);
     ReadSensorColorEx(IN_3,a,raw,c,c);
     rTop=raw[0];
     RotateMotor(OUT_B,100,240);
     ReadSensorColorEx(IN_3,a,raw,c,c);
     gTop=raw[1];
     RotateMotor(OUT_B,100,240);
     ReadSensorColorEx(IN_3,a,raw,c,c);
     bTop=raw[2];
     RotateMotor(OUT_B,100,-700);
     
     rCal=180/(rTop-rBottom);
     gCal=180/(gTop-gBottom);
     bCal=180/(bTop-bBottom);
     rBottom-=30;
     gBottom-=30;
